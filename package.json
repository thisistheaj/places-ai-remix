{
    "name": "template-remix",
    "description": "A Phaser 3 Remix project template that demonstrates Remix with React communication and uses Vite for bundling.",
    "sideEffects": false,
    "version": "1.0.1",
    "type": "module",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/phaserjs/template-remix.git"
    },
    "author": "Phaser Studio <support@phaser.io> (https://phaser.io/)",
    "license": "MIT",
    "licenseUrl": "http://www.opensource.org/licenses/mit-license.php",
    "bugs": {
        "url": "https://github.com/phaserjs/template-remix/issues"
    },
    "homepage": "https://github.com/phaserjs/template-remix#readme",
    "keywords": [
        "phaser",
        "phaser3",
        "remix",
        "vite",
        "typescript"
    ],
    "scripts": {
        "dev": "node log.js dev & remix vite:dev --config vite/config.dev.mjs",
        "build": "node log.js build & remix vite:build --config vite/config.prod.mjs",
        "dev-nolog": "remix vite:dev --config vite/config.dev.mjs",
        "build-nolog": "remix vite:build --config vite/config.prod.mjs",
        "lint": "eslint --ignore-path .gitignore --cache --cache-location ./node_modules/.cache/eslint .",
        "start": "remix-serve ./build/server/index.js",
        "typecheck": "tsc",
        "fix-paths": "cd scripts && ./fix_tileset_paths.sh",
        "extract-collision": "tsx scripts/extract_collision_map.ts"
    },
    "dependencies": {
        "@radix-ui/react-avatar": "^1.1.3",
        "@radix-ui/react-dialog": "^1.1.6",
        "@radix-ui/react-dropdown-menu": "^2.1.6",
        "@radix-ui/react-label": "^2.1.2",
        "@radix-ui/react-scroll-area": "^1.2.3",
        "@radix-ui/react-separator": "^1.1.2",
        "@radix-ui/react-slot": "^1.1.2",
        "@radix-ui/react-tabs": "^1.1.3",
        "@radix-ui/react-toast": "^1.2.6",
        "@remix-run/node": "^2.9.2",
        "@remix-run/react": "^2.9.2",
        "@remix-run/serve": "^2.9.2",
        "@shadcn/ui": "^0.0.4",
        "@types/prismjs": "^1.26.5",
        "class-variance-authority": "^0.7.1",
        "clsx": "^2.1.1",
        "emoji-picker-react": "^4.12.2",
        "firebase": "^11.4.0",
        "firebase-admin": "^13.2.0",
        "firebase-functions": "^6.3.2",
        "isbot": "^4.1.0",
        "lucide-react": "^0.482.0",
        "node-fetch": "^2.7.0",
        "openai": "^4.89.0",
        "phaser": "^3.88.2",
        "prismjs": "^1.30.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "remix-utils": "^7.6.0",
        "tailwind-merge": "^3.0.2",
        "tailwind-scrollbar": "^4.0.1"
    },
    "devDependencies": {
        "@remix-run/dev": "^2.9.2",
        "@tailwindcss/postcss": "^4.0.14",
        "@types/react": "^18.2.20",
        "@types/react-dom": "^18.2.7",
        "@typescript-eslint/eslint-plugin": "^6.7.4",
        "@typescript-eslint/parser": "^6.7.4",
        "autoprefixer": "^10.4.21",
        "eslint": "^8.38.0",
        "eslint-import-resolver-typescript": "^3.6.1",
        "eslint-plugin-import": "^2.28.1",
        "eslint-plugin-jsx-a11y": "^6.7.1",
        "eslint-plugin-react": "^7.33.2",
        "eslint-plugin-react-hooks": "^4.6.0",
        "postcss": "^8.5.3",
        "tailwindcss": "^4.0.14",
        "tailwindcss-animate": "^1.0.7",
        "tsx": "^4.19.3",
        "typescript": "^5.1.6",
        "vite": "^5.1.0",
        "vite-tsconfig-paths": "^4.2.1"
    },
    "engines": {
        "node": ">=18.0.0"
    }
}
